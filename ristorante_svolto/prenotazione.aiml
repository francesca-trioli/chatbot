<?xml version="1.0" encoding="UTF-8"?>
<aiml version="2.0">
	<!-- insert your AIML categories here -->

	<category>
	    <pattern>Si</pattern>
	    <that>* HA PRENOTATO</that>
	    <template>A che nome?
	        <think><set name="topic">nome</set></think>
	    </template>
	</category>
	
	<category>
	    <pattern>* a nome * </pattern>
	    <that>* HA PRENOTATO</that>
	    <template>
	        <delay>3</delay>
	        Trovato. Da questa parte, prego.
	        <delay>3</delay>
	        Cosa vorrebbe da bere?    
	        <think><set name="topic">bere</set></think>
	    </template>
	</category>
	
	<topic name="nome">
    <category>
	    <pattern>*</pattern>
	    <template>
	       <delay>3</delay> 
	        Trovato. Da questa parte, prego.
	        <think><set name="topic">bere</set></think>
	        <delay>3</delay>
	        Cosa vorrebbe da bere? 
	    </template>
	</category>
	</topic>
	
	<category>
	    <pattern>No</pattern>
	    <that>* HA PRENOTATO</that>
	    <template>Quanti siete?
	        <think><set name="topic">quanti</set></think>
	    </template>
	</category>
	
	<topic name="quanti">
	<category>
	    <pattern>*</pattern>
	    <that>QUANTI SIETE</that>
	    <template>
	        <delay>3</delay>
	        Per fortuna ho posto. Prego, seguitemi.
	        <delay>3</delay>
	        Cosa vorrebbe da bere? 
	        <think><set name="topic">bere</set></think>
	    </template>
	</category>
	
